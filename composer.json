{
    "name": "phariscope/event-store",
    "type": "library",
    "description": "To develop event stores this package is start base.",
    "keywords": ["templating"],
    "homepage": "https://github.com/phariscope/EventStore",
    "license": "MIT",
    "minimum-stability": "stable",
    "authors": [
        {
            "name": "Frédéric Royet",
            "email": "frederic.royet@logipro.com",
            "homepage": "https://www.linkedin.com/in/frederic-royet-42568566/",
            "role": "Project Founder"
        }
    ],
    "require": {
        "php": ">=8.1",
        "phariscope/event": "1.x-dev",
        "symfony/serializer": "^6.3"
    },
    "require-dev": {
        "infection/extension-installer": "0.1.2",
        "infection/infection": "^0.27",
        "phpstan/phpdoc-parser": "^1.20",
        "phpstan/phpstan": "1.10.15",
        "phpunit/phpunit": "^10",
        "squizlabs/php_codesniffer": "3.*"
    },
    "autoload": {
        "psr-4" : {
            "Phariscope\\EventStore\\" : "src/"
        }
    },
    "autoload-dev": {
        "psr-4" : {
            "Phariscope\\EventStore\\Tests\\" : "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true
        }
    }
}
